---
import { PERSON } from '@/consts/schema';
import { useTranslations, type Locale } from '@/lib/i18n/translations';

interface Props {
  locale?: Locale;
}

const { locale = 'it' } = Astro.props;
const t = useTranslations(locale);
const baseUrl = locale === 'en' ? '/en' : '';

// Estrai i link social da sameAs
const githubUrl = PERSON.sameAs.find((url) => url.includes('github.com'));
const linkedinUrl = PERSON.sameAs.find((url) => url.includes('linkedin.com'));
---

<footer class="bg-footer-surface text-footer-on-surface py-16 px-6 mt-auto">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-16">
      <!-- Column 1: Brand & Bio -->
      <div class="col-span-1">
        <h2 class="text-xl font-bold text-footer-on-surface mb-4 tracking-tight">
          {PERSON.name}
        </h2>
        <p class="text-footer-on-surface/70 text-sm leading-relaxed mb-6">
          {PERSON.description}
        </p>
        <div class="flex items-center gap-4">
          {githubUrl && (
            <a
              href={githubUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="p-2 rounded-full bg-footer-on-surface/10 text-footer-on-surface state-layer hover:bg-footer-primary hover:text-footer-surface transition-all duration-300"
              aria-label="GitHub"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path
                  d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                ></path>
                <path d="M9 18c-4.51 2-5-2-7-2"></path>
              </svg>
            </a>
          )}
          {linkedinUrl && (
            <a
              href={linkedinUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="p-2 rounded-full bg-footer-on-surface/10 text-footer-on-surface state-layer hover:bg-footer-primary hover:text-footer-surface transition-all duration-300"
              aria-label="LinkedIn"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path
                  d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
                ></path>
                <rect width="4" height="12" x="2" y="9"></rect>
                <circle cx="4" cy="4" r="2"></circle>
              </svg>
            </a>
          )}
        </div>
      </div>

      <!-- Column 2: Explore -->
      <div class="col-span-1">
        <h3 class="text-sm font-bold text-footer-on-surface uppercase tracking-wider mb-6">
          {t.footer.explore}
        </h3>
        <ul class="space-y-4">
          <li>
            <a
              href={`${baseUrl}/${t.pillars.engineering.slug}/`}
              class="text-footer-on-surface/70 hover:text-footer-primary transition-colors flex items-center gap-2 group link-state"
            >
              <span
                class="w-1.5 h-1.5 rounded-full bg-footer-on-surface/30 group-hover:bg-footer-primary transition-colors"
              ></span>
              {t.pillars.engineering.name}
            </a>
          </li>
          <li>
            <a
              href={`${baseUrl}/${t.pillars.research.slug}/`}
              class="text-footer-on-surface/70 hover:text-footer-primary transition-colors flex items-center gap-2 group link-state"
            >
              <span
                class="w-1.5 h-1.5 rounded-full bg-footer-on-surface/30 group-hover:bg-footer-primary transition-colors"
              ></span>
              {t.pillars.research.name}
            </a>
          </li>
          <li>
            <a
              href={`${baseUrl}/${t.pillars.business.slug}/`}
              class="text-footer-on-surface/70 hover:text-footer-primary transition-colors flex items-center gap-2 group link-state"
            >
              <span
                class="w-1.5 h-1.5 rounded-full bg-footer-on-surface/30 group-hover:bg-footer-primary transition-colors"
              ></span>
              {t.pillars.business.name}
            </a>
          </li>
        </ul>
      </div>

      <!-- Column 3: Info & Resources -->
      <div class="col-span-1">
        <h3 class="text-sm font-bold text-footer-on-surface uppercase tracking-wider mb-6">
          {t.footer.infoResources}
        </h3>
        <ul class="space-y-4">
          <li>
            <a
              href={`${baseUrl}/about/`}
              class="text-footer-on-surface/70 hover:text-footer-primary transition-colors link-state"
            >
              {t.footer.about}
            </a>
          </li>
          <li>
            <a
              href={`${baseUrl}/privacy/`}
              class="text-footer-on-surface/70 hover:text-footer-primary transition-colors link-state"
            >
              {t.footer.privacy}
            </a>
          </li>
          <li>
            <a
              href={`${baseUrl}/rss/`}
              class="text-footer-on-surface/70 hover:text-footer-primary transition-colors link-state"
            >
              {t.footer.rss}
            </a>
          </li>
        </ul>
      </div>

      <!-- Column 4: Newsletter -->
      <div class="col-span-1">
        <h3 class="text-sm font-bold text-footer-on-surface uppercase tracking-wider mb-6">
          {t.footer.newsletter}
        </h3>
        <p class="text-footer-on-surface/70 text-sm mb-4">
          {t.footer.newsletterDescription}
        </p>
        <form class="flex flex-col gap-3">
          <input
            type="email"
            placeholder={t.footer.newsletterPlaceholder}
            disabled
            class="w-full px-4 py-2.5 rounded-lg bg-footer-on-surface/10 border border-footer-on-surface/20 text-footer-on-surface placeholder:text-footer-on-surface/50 input-state opacity-50 cursor-not-allowed"
          />
          <button
            type="submit"
            disabled
            class="w-full px-4 py-2.5 rounded-lg bg-footer-on-surface/30 text-footer-on-surface/50 text-label-large font-bold flex items-center justify-center gap-2 cursor-not-allowed"
          >
            {t.footer.comingSoon}
          </button>
        </form>
      </div>
    </div>

    <!-- Sub-footer -->
    <div
      class="pt-8 border-t border-footer-on-surface/20 flex flex-col md:flex-row items-center justify-between gap-4 text-xs text-footer-on-surface/50"
    >
      <div class="flex items-center gap-2">
        <span>© {new Date().getFullYear()} {PERSON.name}</span>
        <span>·</span>
        <a
          href={`${baseUrl}/licenza/`}
          class="hover:text-footer-primary transition-colors link-state">CC BY 4.0</a
        >
      </div>
      <div class="flex items-center gap-6">
        <a
          href={`${baseUrl}/privacy/`}
          class="hover:text-footer-primary transition-colors link-state"
          >{t.footer.privacy}</a
        >
        <a
          href={`${baseUrl}/licenza/`}
          class="hover:text-footer-primary transition-colors link-state"
          >{t.footer.license}</a
        >
      </div>
    </div>
  </div>
</footer>
