---
import { PERSON } from '@/consts/schema';
import ArrowRight from '@/components/icons/ArrowRight.astro';

// Estrai i link social da sameAs
const githubUrl = PERSON.sameAs.find(url => url.includes('github.com'));
const linkedinUrl = PERSON.sameAs.find(url => url.includes('linkedin.com'));
---

<footer class="bg-inverse-surface text-inverse-on-surface py-16 px-6 mt-auto">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-16">
      <!-- Column 1: Brand & Bio -->
      <div class="col-span-1">
        <h2 class="text-xl font-bold text-inverse-on-surface mb-4 tracking-tight">
          {PERSON.name}
        </h2>
        <p class="text-inverse-on-surface/70 text-sm leading-relaxed mb-6">
          {PERSON.description}
        </p>
        <div class="flex items-center gap-4">
          {githubUrl && (
            <a
              href={githubUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="p-2 rounded-full bg-inverse-on-surface/10 text-inverse-on-surface state-layer hover:bg-inverse-primary hover:text-inverse-surface transition-all duration-300"
              aria-label="GitHub"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path
                  d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                ></path>
                <path d="M9 18c-4.51 2-5-2-7-2"></path>
              </svg>
            </a>
          )}
          {linkedinUrl && (
            <a
              href={linkedinUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="p-2 rounded-full bg-inverse-on-surface/10 text-inverse-on-surface state-layer hover:bg-inverse-primary hover:text-inverse-surface transition-all duration-300"
              aria-label="LinkedIn"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path
                  d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
                ></path>
                <rect width="4" height="12" x="2" y="9"></rect>
                <circle cx="4" cy="4" r="2"></circle>
              </svg>
            </a>
          )}
        </div>
      </div>

      <!-- Column 2: Esplora -->
      <div class="col-span-1">
        <h3 class="text-sm font-bold text-inverse-on-surface uppercase tracking-wider mb-6">
          Esplora
        </h3>
        <ul class="space-y-4">
          <li>
            <a
              href="/ingegneria-ai/"
              class="text-inverse-on-surface/70 hover:text-inverse-primary transition-colors flex items-center gap-2 group link-state"
            >
              <span
                class="w-1.5 h-1.5 rounded-full bg-inverse-on-surface/30 group-hover:bg-inverse-primary transition-colors"
              ></span>
              Ingegneria AI
            </a>
          </li>
          <li>
            <a
              href="/ricerca/"
              class="text-inverse-on-surface/70 hover:text-inverse-primary transition-colors flex items-center gap-2 group link-state"
            >
              <span
                class="w-1.5 h-1.5 rounded-full bg-inverse-on-surface/30 group-hover:bg-inverse-primary transition-colors"
              ></span>
              Ricerca
            </a>
          </li>
          <li>
            <a
              href="/business/"
              class="text-inverse-on-surface/70 hover:text-inverse-primary transition-colors flex items-center gap-2 group link-state"
            >
              <span
                class="w-1.5 h-1.5 rounded-full bg-inverse-on-surface/30 group-hover:bg-inverse-primary transition-colors"
              ></span>
              Business
            </a>
          </li>
        </ul>
      </div>

      <!-- Column 3: Risorse -->
      <div class="col-span-1">
        <h3 class="text-sm font-bold text-inverse-on-surface uppercase tracking-wider mb-6">
          Info & Risorse
        </h3>
        <ul class="space-y-4">
          <li>
            <a
              href="/about/"
              class="text-inverse-on-surface/70 hover:text-inverse-primary transition-colors link-state"
            >
              Chi Sono
            </a>
          </li>
          <li>
            <a href="#" class="text-inverse-on-surface/70 hover:text-inverse-primary transition-colors">
              Setup & Gear
            </a>
          </li>
          <li>
            <a href="#" class="text-inverse-on-surface/70 hover:text-inverse-primary transition-colors">
              Contatti
            </a>
          </li>
          <li>
            <a
              href="/rss.xml"
              class="text-inverse-on-surface/70 hover:text-inverse-primary transition-colors link-state"
            >
              RSS Feed
            </a>
          </li>
        </ul>
      </div>

      <!-- Column 4: Newsletter -->
      <div class="col-span-1">
        <h3 class="text-sm font-bold text-inverse-on-surface uppercase tracking-wider mb-6">
          Newsletter
        </h3>
        <p class="text-inverse-on-surface/70 text-sm mb-4">
          Ricevi aggiornamenti settimanali su tech e design. No spam.
        </p>
        <form class="flex flex-col gap-3">
          <input
            type="email"
            placeholder="La tua email"
            class="w-full px-4 py-2.5 rounded-lg bg-inverse-on-surface/10 border border-inverse-on-surface/20 text-inverse-on-surface placeholder:text-inverse-on-surface/50 input-state"
          />
          <button
            type="submit"
            class="w-full px-4 py-2.5 rounded-lg bg-inverse-primary text-inverse-surface text-label-large font-bold state-layer button-state elevation-0 hover:elevation-1 flex items-center justify-center gap-2"
          >
            Iscriviti
            <ArrowRight size={16} />
          </button>
        </form>
      </div>
    </div>

    <!-- Sub-footer -->
    <div
      class="pt-8 border-t border-inverse-on-surface/20 flex flex-col md:flex-row items-center justify-between gap-4 text-xs text-inverse-on-surface/50"
    >
      <div class="flex items-center gap-6">
        <span>Â© {new Date().getFullYear()} Irene Burresi. Tutti i diritti riservati.</span>
      </div>
      <div class="flex items-center gap-6">
        <a href="#" class="hover:text-inverse-primary transition-colors link-state">Privacy Policy</a>
        <a href="#" class="hover:text-inverse-primary transition-colors link-state">Cookie Policy</a>
        <a href="/licenza/" class="hover:text-inverse-primary transition-colors link-state">
          Credits
        </a>
      </div>
    </div>
  </div>
</footer>
