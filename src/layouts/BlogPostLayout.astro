---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import Navbar from '@/components/layout/Navbar.astro';
import RelatedArticles from '@/components/blog/RelatedArticles.astro';
import FallbackBanner from '@/components/i18n/FallbackBanner.astro';
import { SITE } from '@/consts/site';
import { buildArticleGraph } from '@/lib/seo/structuredData';
import { canonicalFromPath, toAbsoluteUrl } from '@/lib/seo/url';
import { getOgImage, hasValidCoverImage } from '@/lib/og-pattern';
import { calculateContentMetrics } from '@/lib/utils';
import { useTranslations, getPillarSlug, type Locale } from '@/lib/i18n/translations';
import { getLocaleFromUrl } from '@/lib/i18n/utils';
import { getBaseSlug } from '@/lib/content';

interface Props {
  post: CollectionEntry<'blog'>;
  headings: { depth: number; slug: string; text: string }[];
  locale?: Locale;
  isFallback?: boolean;
}

const { post, headings, locale, isFallback = false } = Astro.props;
const { data, slug, body } = post;

// Determine current locale
const currentLocale: Locale = locale ?? data.locale ?? getLocaleFromUrl(Astro.url);
const t = useTranslations(currentLocale);
const baseUrl = currentLocale === 'en' ? '/en' : '';

// Get normalized slug (without .en)
const normalizedSlug = getBaseSlug(slug);

// Calcola reading time e word count dinamicamente dal contenuto
const { readingTime, wordCount } = calculateContentMetrics(body);

// Costruisci URL canonico con locale (usa normalized slug)
const canonicalUrl = canonicalFromPath(
  `${baseUrl}/blog/${normalizedSlug}/`,
  new URL(SITE.url),
).toString();

// Date ISO per SEO
const pubDateISO = new Date(data.publishedAt).toISOString();
const modDateISO = data.updatedAt
  ? new Date(data.updatedAt).toISOString()
  : undefined;

// Immagine: usa coverImage se esiste, altrimenti pattern generato
const displayImage = getOgImage(data.coverImage, slug);
const hasCover = hasValidCoverImage(data.coverImage);

// OG Image assoluto
const ogImage = toAbsoluteUrl(displayImage, new URL(SITE.url)).toString();

// Pillar data from translations
const pillarSlug = getPillarSlug(data.pillar as keyof typeof t.pillars, currentLocale);
const sectionName = t.pillars[data.pillar as keyof typeof t.pillars]?.name ?? data.pillar;

// Meta description per SEO (usa description se presente, altrimenti summary)
const metaDescription = data.description ?? data.summary;

// JSON-LD strutturato per l'articolo
const articleJsonLd = buildArticleGraph({
  canonicalUrl,
  title: data.title,
  description: metaDescription,
  abstract: data.abstract,
  alternativeHeadline: data.alternativeHeadline,
  datePublished: pubDateISO,
  dateModified: modDateISO,
  imageUrl: ogImage,
  videoUrl: data.video,
  tags: data.tags,
  section: sectionName,
  wordCount,
  readingTime,
  inLanguage: data.inLanguage,
  genre: data.genre,
  citation: data.citation,
  isBasedOn: data.isBasedOn,
  keywords: data.keywords,
  discussionUrl: data.discussionUrl,
  educationalLevel: data.educationalLevel,
  learningResourceType: data.learningResourceType,
  prerequisites: data.prerequisites,
  // NEW: FAQ and HowTo schemas
  faq: data.faq,
  howto: data.howto,
  breadcrumbs: [
    { name: 'Home', url: `${SITE.url}${baseUrl}/` },
    { name: sectionName, url: `${SITE.url}${baseUrl}/${pillarSlug}/` },
    { name: data.title, url: canonicalUrl },
  ],
});
---

<BaseLayout
  title={data.title}
  description={metaDescription}
  image={displayImage}
  type="article"
  canonical={canonicalUrl}
  jsonLd={articleJsonLd}
  publishedTime={pubDateISO}
  modifiedTime={modDateISO}
  tags={data.tags}
  section={sectionName}
  locale={currentLocale}
  metaTitle={data.meta_title}
  focusKeyword={data.focus_keyword}
  ogCustom={data.og}
  twitterCustom={data.twitter}
  preconnect={data.preconnect}
  prevUrl={data.prev}
  nextUrl={data.next}
>
  <!-- Big Colored Container - Level 0 with tinted surface (no shadow, just color) -->
  <div class="w-full max-w-[1600px] mx-auto p-4 md:p-6">
    <div
      class="bg-surface-container-low rounded-[40px] px-6 pt-2 pb-32 md:pb-64 relative overflow-hidden transition-colors duration-500 elevation-0"
    >
      <!-- Background decoration blob -->
      <div
        class="absolute top-0 right-0 w-[500px] h-[500px] bg-primary/5 rounded-full blur-[100px] -translate-y-1/2 translate-x-1/2 pointer-events-none"
      >
      </div>

      <!-- Navbar inside container -->
      <Navbar locale={currentLocale} />

      <!-- Post Header Content -->
      <div class="mt-12 md:mt-20 max-w-5xl mx-auto md:px-12 relative z-10">
        <!-- Category + Meta Info -->
        <div class="flex flex-wrap items-center gap-4 mb-6">
          <a
            href={`${baseUrl}/${pillarSlug}/`}
            class="px-3 py-1 rounded-full bg-secondary-container text-on-secondary-container text-label-large font-bold border border-secondary/20 flex items-center gap-2 hover:bg-secondary-container/80 transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="14"
              height="14"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="m7.5 4.27 9 5.15M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"
              ></path>
            </svg>
            {sectionName}
          </a>
          <span
            class="text-label-medium text-on-surface-variant flex items-center gap-2"
          >
            <time datetime={pubDateISO}>{data.publishedAt}</time>
            <span class="w-1 h-1 rounded-full bg-on-surface-variant/50"></span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="14"
              height="14"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
            {readingTime}
          </span>
        </div>

        <!-- Title -->
        <h1
          class="text-display-small md:text-display-large font-bold text-on-surface mb-6 leading-[1.1] tracking-tight max-w-4xl"
          data-pagefind-meta="title"
        >
          {data.title}
        </h1>

        <!-- Summary/Description -->
        <p
          class="text-headline-small text-on-surface-variant mb-8 line-clamp-2 max-w-3xl"
        >
          {data.summary}
        </p>

        <!-- Author Info -->
        <div class="flex items-center gap-4">
          <img
            src={data.author.avatar}
            alt={data.author.name}
            class="w-12 h-12 rounded-full border-2 border-surface-container-high object-cover"
            width="48"
            height="48"
          />
          <div class="flex flex-col">
            <span class="text-title-medium text-on-surface"
              >{data.author.name}</span
            >
            <span class="text-body-small text-on-surface-variant"
              >{data.author.role}</span
            >
          </div>
        </div>
      </div>
    </div>

    <!-- The Overlap Zone - Image overlaps the container above -->
    <div class="max-w-6xl mx-auto px-2 sm:px-8 -mt-24 md:-mt-56 relative z-20">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
        <!-- Left: Featured Image (8 cols) -->
        <div class="lg:col-span-8">
          <div
            class="rounded-3xl overflow-hidden elevation-2 bg-surface-container-low aspect-[16/9] relative group"
          >
            <img
              src={displayImage}
              alt={data.title}
              class:list={[
                "w-full h-full transition-transform duration-700 group-hover:scale-105",
                hasCover ? "object-cover" : "object-contain"
              ]}
              width="800"
              height="450"
              loading="eager"
            />
            <!-- Overlay gradient for depth (solo per foto reali) -->
            {hasCover && (
              <div
                class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"
              >
              </div>
            )}
          </div>
        </div>

        <!-- Right: Newsletter Card - Level 2 (Z=3dp, Hero card priority, sticky) -->
        <div class="lg:col-span-4 lg:sticky lg:top-8 mt-4 lg:mt-0">
          <div
            class="shape-xl p-8 bg-primary-container text-on-primary-container elevation-2"
          >
            <h3 class="text-title-large font-bold mb-3">
              {t.article.newsletterTitle}
            </h3>
            <p class="text-body-medium mb-6 opacity-90">
              {t.article.newsletterDescription}
            </p>
            <!-- M3 Spacing: space-y-3 (12dp gap between input and button) -->
            <div class="space-y-3">
              <!-- M3 Input: shape-xs (4px rounded corners) -->
              <input
                type="email"
                placeholder={t.footer.newsletterPlaceholder}
                disabled
                class="w-full px-4 py-3 shape-xs bg-surface text-on-surface input-state opacity-50 cursor-not-allowed"
              />
              <button
                disabled
                class="w-full px-6 py-3 shape-full bg-on-primary-container/30 text-on-primary-container/50 text-label-large font-medium cursor-not-allowed"
              >
                {t.footer.comingSoon}
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Article Content with Sidebar TOC -->
  <div class="max-w-6xl mx-auto px-4 sm:px-8 mt-16 md:mt-24 mb-16">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
      <!-- Main Content -->
      <article
        class="lg:col-span-8 lg:col-start-1 mdx-content"
        data-pagefind-body
        data-pagefind-lang={currentLocale}
      >
        <FallbackBanner show={isFallback} />
        <slot />
      </article>

      <!-- Table of Contents Sidebar (Desktop) -->
      {
        headings.length > 0 && (
          <aside class="hidden lg:block lg:col-span-4 space-y-8 mt-24">
            <nav
              class="bg-surface-container-low rounded-2xl p-6 sticky top-24 -mt-24 elevation-1"
              aria-label={t.article.tocLabel}
            >
              <h2 class="text-title-medium font-bold mb-4">{t.ui.toc}</h2>
              <ul class="flex flex-col space-y-1">
                {headings.map((heading, index) => (
                  <li>
                    <a
                      href={`#${heading.slug}`}
                      class:list={[
                        'py-1.5 px-2 -mx-2 block rounded-md link-state',
                        heading.depth === 2 && 'text-body-medium font-medium',
                        heading.depth === 3 && 'text-body-medium pl-4 border-l border-outline ml-1',
                        index === 0 ? 'text-primary' : 'text-on-surface-variant hover:text-primary'
                      ]}
                    >
                      {heading.text}
                    </a>
                  </li>
                ))}
              </ul>
            </nav>
          </aside>
        )
      }
    </div>
  </div>

  <!-- Share Section -->
  <div class="max-w-6xl mx-auto px-4 sm:px-8 mb-32">
    <div class="lg:max-w-[66.666%]">
      <div class="border-t border-outline/20 pt-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <h3 class="text-title-medium font-bold text-on-surface mb-1">
              {t.article.shareTitle}
            </h3>
            <p class="text-body-medium text-on-surface-variant">
              {t.article.shareDescription}
            </p>
          </div>
          <div class="flex items-center gap-2">
            <!-- LinkedIn Share -->
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(canonicalUrl)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center w-11 h-11 rounded-full bg-[#0A66C2] text-white hover:bg-[#0A66C2]/90 transition-colors elevation-1 hover:elevation-2"
              aria-label={t.article.shareLinkedIn}
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>

            <!-- X (Twitter) Share -->
            <a
              href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(canonicalUrl)}&text=${encodeURIComponent(data.title)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center w-11 h-11 rounded-full bg-[#000000] text-white hover:bg-[#000000]/80 transition-colors elevation-1 hover:elevation-2"
              aria-label={t.article.shareTwitter}
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>

            <!-- Copy Link -->
            <button
              id="copy-link-btn"
              class="inline-flex items-center justify-center w-11 h-11 rounded-full bg-surface-container text-on-surface hover:bg-surface-container-high transition-colors elevation-1 hover:elevation-2"
              aria-label={t.article.copyLink}
              data-url={canonicalUrl}
            >
              <svg id="copy-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect width="14" height="14" x="8" y="8" rx="2" ry="2"/>
                <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/>
              </svg>
              <svg id="check-icon" class="hidden" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('astro:page-load', () => {
      const copyBtn = document.getElementById('copy-link-btn');
      const copyIcon = document.getElementById('copy-icon');
      const checkIcon = document.getElementById('check-icon');

      if (copyBtn) {
        copyBtn.addEventListener('click', async () => {
          const url = copyBtn.getAttribute('data-url');
          if (url) {
            try {
              await navigator.clipboard.writeText(url);
              // Show success state
              copyIcon?.classList.add('hidden');
              checkIcon?.classList.remove('hidden');

              // Reset after 2 seconds
              setTimeout(() => {
                copyIcon?.classList.remove('hidden');
                checkIcon?.classList.add('hidden');
              }, 2000);
            } catch (err) {
              console.error('Failed to copy:', err);
            }
          }
        });
      }
    });
  </script>

  <!-- Related Articles -->
  <RelatedArticles
    currentSlug={slug}
    relatedSlugs={data.relatedSlugs}
    pillar={data.pillar}
    locale={currentLocale}
  />
</BaseLayout>
