---
/**
 * Blog Index (English) - List of all articles
 * Includes JSON-LD CollectionPage for SEO
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/layout/Navbar.astro';
import ArticleCard from '@/components/blog/ArticleCard.astro';
import { getLocalizedPosts } from '@/lib/content';
import { useTranslations } from '@/lib/i18n/translations';
import { SITE } from '@/consts/site';
import { buildCollectionSchema } from '@/lib/seo/structuredData';
import { canonicalFromPath } from '@/lib/seo/url';

const t = useTranslations('en');
const baseUrl = '/en';

const posts = (await getLocalizedPosts('en'))
  .sort((a, b) => new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime());

const title = t.nav.blog;
const description = t.blog.description;
const canonicalUrl = canonicalFromPath('/en/blog/', new URL(SITE.url)).toString();

// JSON-LD for collection page
const collectionJsonLd = buildCollectionSchema({
  canonicalUrl,
  title,
  description,
  items: posts.map((p) => ({
    title: p.data.title,
    url: `${SITE.url}/en/blog/${p.slug.replace(/\.en$/, '')}/`,
  })),
});
---

<BaseLayout
  title={title}
  description={description}
  canonical={canonicalUrl}
  jsonLd={collectionJsonLd}
  locale="en"
>
  <div class="w-full max-w-[1600px] mx-auto p-4 md:p-6">
    <div class="bg-surface-container-low rounded-[40px] px-6 pt-2 pb-16 relative overflow-hidden elevation-0">
      <Navbar locale="en" />

      <div class="mt-12 max-w-6xl mx-auto md:px-12 relative z-10">
        <div class="flex items-center gap-4 mb-4">
          <h1 class="text-display-small md:text-display-medium font-bold text-on-surface">
            {title}
          </h1>
          <a
            href={`${baseUrl}/rss.xml`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-primary/10 text-primary hover:bg-primary/20 transition-colors"
            aria-label={t.ui.rssFeed}
            title={t.ui.subscribeRss}
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 11a9 9 0 0 1 9 9"/>
              <path d="M4 4a16 16 0 0 1 16 16"/>
              <circle cx="5" cy="19" r="1"/>
            </svg>
          </a>
        </div>
        <p class="text-headline-small text-on-surface-variant mb-12 max-w-3xl">
          {description}
        </p>

        {posts.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {posts.map((post) => (
              <ArticleCard post={post} locale="en" />
            ))}
          </div>
        ) : (
          <div class="text-center py-20">
            <div class="w-16 h-16 mx-auto mb-4 shape-full bg-surface-container flex items-center justify-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-on-surface-variant"
              >
                <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
              </svg>
            </div>
            <p class="text-title-medium text-on-surface-variant mb-2">{t.ui.noArticles}</p>
            <p class="text-body-medium text-on-surface-variant/60">
              {t.ui.noArticlesYet}
            </p>
          </div>
        )}
      </div>
    </div>
  </div>
</BaseLayout>
