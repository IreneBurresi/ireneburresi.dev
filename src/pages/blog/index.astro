---
/**
 * Blog Index - Lista di tutti gli articoli
 * Include JSON-LD CollectionPage per SEO
 */
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/layout/Navbar.astro';
import ArticleCard from '@/components/blog/ArticleCard.astro';
import { SITE } from '@/consts/site';
import { buildCollectionSchema } from '@/lib/seo/structuredData';
import { canonicalFromPath } from '@/lib/seo/url';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime());

const title = 'Blog';
const description = 'Tutti gli articoli su AI Engineering, ricerca, business e governance dell\'intelligenza artificiale.';
const canonicalUrl = canonicalFromPath('/blog/', new URL(SITE.url)).toString();

// JSON-LD per la collection page
const collectionJsonLd = buildCollectionSchema({
  canonicalUrl,
  title,
  description,
  items: posts.map((p) => ({
    title: p.data.title,
    url: `${SITE.url}/blog/${p.slug}/`,
  })),
});
---

<BaseLayout
  title={title}
  description={description}
  canonical={canonicalUrl}
  jsonLd={collectionJsonLd}
>
  <div class="w-full max-w-[1600px] mx-auto p-4 md:p-6">
    <div class="bg-surface-container-low rounded-[40px] px-6 pt-2 pb-16 relative overflow-hidden elevation-0">
      <Navbar />

      <div class="mt-12 max-w-6xl mx-auto md:px-12 relative z-10">
        <div class="flex items-center gap-4 mb-4">
          <h1 class="text-display-small md:text-display-medium font-bold text-on-surface">
            {title}
          </h1>
          <a
            href="/rss.xml"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-primary/10 text-primary hover:bg-primary/20 transition-colors"
            aria-label="Feed RSS"
            title="Iscriviti al feed RSS"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 11a9 9 0 0 1 9 9"/>
              <path d="M4 4a16 16 0 0 1 16 16"/>
              <circle cx="5" cy="19" r="1"/>
            </svg>
          </a>
        </div>
        <p class="text-headline-small text-on-surface-variant mb-12 max-w-3xl">
          {description}
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {posts.map((post) => (
            <ArticleCard post={post} />
          ))}
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
