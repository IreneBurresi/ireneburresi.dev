{
  "name": "blog",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:seo": "vitest run tests/seo.test.ts",
    "test:links": "vitest run tests/links.test.ts",
    "test:feeds": "vitest run tests/feeds.test.ts",
    "test:content": "vitest run tests/content.test.ts",
    "lint": "astro check",
    "typecheck": "astro check",
    "validate": "npm run build && npm run test",
    "prepublish:check": "tsx scripts/prepublish.ts",
    "metadata:analyze": "tsx scripts/analyze-metadata.ts",
    "metadata:dashboard": "tsx scripts/generate-dashboard.ts",
    "images:validate": "tsx scripts/validate-images.ts",
    "prepare": "husky || true",
    "audit:seo": "bash scripts/check-chrome.sh && npm run build && lhci autorun",
    "audit:perf": "bash scripts/check-chrome.sh && npm run build && lighthouse http://localhost:4321 --only-categories=performance --view",
    "audit:quick": "bash scripts/check-chrome.sh && lighthouse http://localhost:4321 --only-categories=seo,performance --chrome-flags=\"--headless\" --output=html --output-path=./lighthouse-report.html"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/preact": "^4.1.3",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/vercel": "^9.0.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.0.3",
    "@vercel/analytics": "^1.6.1",
    "astro": "^5.16.6",
    "astro-pagefind": "^1.8.5",
    "clsx": "^2.1.1",
    "lucide-preact": "^0.562.0",
    "markdown-it": "^14.1.0",
    "preact": "^10.28.0",
    "sanitize-html": "^2.17.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "turndown": "^7.2.2"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@lhci/cli": "^0.15.1",
    "@types/markdown-it": "^14.1.2",
    "@types/sanitize-html": "^2.16.0",
    "@vitest/ui": "^4.0.16",
    "cheerio": "^1.1.2",
    "fast-xml-parser": "^5.3.3",
    "husky": "^9.1.7",
    "lighthouse": "^12.8.2",
    "linkedom": "^0.18.12",
    "lint-staged": "^15.2.11",
    "schema-dts": "^1.1.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "src/content/blog/*.{md,mdx}": [
      "npm run test:content"
    ]
  }
}
